# Core
DATABASE_URL=postgresql://user:password@localhost:5432/fitpilot_db
REDIS_URL=redis://localhost:6379
FRONTEND_URL=http://localhost:3000

# Cross-service auth (Nutrition -> Training)
NUTRITION_API_URL=http://localhost:3000
NUTRITION_AUTH_ME_PATH=/v1/auth/me
NUTRITION_AUTH_TIMEOUT_SECONDS=8

# Exercise media storage
EXERCISE_MEDIA_PROVIDER=local

# R2 (required when EXERCISE_MEDIA_PROVIDER=r2)
R2_ENDPOINT=https://<accountid>.r2.cloudflarestorage.com
R2_REGION=auto
R2_BUCKET=fitpilot-exercise-media
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_PUBLIC_BASE_URL=https://cdn.fitpilot.com
